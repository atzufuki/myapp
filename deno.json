{
  "unstable": ["sloppy-imports"],
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": [
        "no-explicit-any",
        "no-sloppy-imports",
        "require-await",
        "no-unused-vars"
      ]
    }
  },
  "tasks": {
    "dev": "deno run --watch main.ts"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "deno.ns",
      "deno.window",
      "DOM.Iterable",
      "DOM.AsyncIterable"
    ],
    "strict": false,
    "strictFunctionTypes": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "types": ["vite/client", "node"],
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": false
  },
  "imports": {
    "@alexi/": "./src/@alexi/",
    "@open-wc/dedupe-mixin": "https://esm.sh/@open-wc/dedupe-mixin@1.4.0",
    "@std/assert": "jsr:@std/assert@1",
    "@std/fs": "jsr:@std/fs@^1.0.5",
    "@std/io": "jsr:@std/io@^0.225.0",
    "@std/path": "jsr:@std/path@^1.0.7",
    "myapp/": "./src/myapp/",
    "esbuild": "https://deno.land/x/esbuild@v0.24.0/mod.js",
    "esbuild_serve/features/http_imports": "https://deno.land/x/esbuild_serve@1.4.1/features/httpImports.ts",
    "idb": "https://esm.sh/idb@8.0.0",
    "nunjucks": "npm:nunjucks@^3.2.4",
    "project/": "./project/"
  },
  "fmt": {
    "useTabs": false,
    "semiColons": true,
    "singleQuote": true,
    "indentWidth": 2
  }
}
