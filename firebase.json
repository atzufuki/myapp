{
  "functions": [
    {
      "source": "./src/functions",
      "runtime": "nodejs20",
      "codebase": "default",
      "ignore": [
        ".**",
        "*.log",
        "node_modules/**",
        "project/**",
        "src/**",
        "static/myapp/**",
        "firebase.json",
        "manage.ts",
        "package.json",
        "package-lock.json",
        "README.md",
        "tsconfig.json",
        "vite.config.ts"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules"
  },
  "emulators": {
    "functions": {
      "host": "0.0.0.0",
      "port": 5001
    },
    "firestore": {
      "host": "0.0.0.0",
      "port": 5002
    },
    "auth": {
      "host": "0.0.0.0",
      "port": 5004
    },
    "ui": {
      "enabled": true,
      "host": "0.0.0.0",
      "port": 4000
    },
    "singleProjectMode": true
  }
}
